{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "lib": [
      "es2017",
      "dom",
      "esnext",
    ]
  },
  "angularCompilerOptions": {
    "genDir": "release/",
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "annotationsAs": "decorators"
  }
}
